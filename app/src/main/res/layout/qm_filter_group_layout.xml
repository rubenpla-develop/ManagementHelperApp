<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <bcn.alten.altenappmanagement.ui.customview.QMFilterGroup
        android:id="@+id/qm_filter_group_radio_group_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        app:presetRadioCheckedId="@+id/qm_filter_group_all_items_button"
        android:orientation="horizontal">

        <bcn.alten.altenappmanagement.ui.customview.QMFilterOptionButton
            android:id="@+id/qm_filter_group_scheduled_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            app:pressedButtonColor="@color/qm_status_color_scheduled"
            app:defaultColor="@color/qm_status_color_default_color"
            android:background="@mipmap/ic_launcher"/>

        <bcn.alten.altenappmanagement.ui.customview.QMFilterOptionButton
            android:id="@+id/qm_filter_group_done_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            app:pressedButtonColor="@color/qm_status_color_already_done"
            app:defaultColor="@color/qm_status_color_default_color"
            android:background="@mipmap/ic_launcher_round"/>

        <bcn.alten.altenappmanagement.ui.customview.QMFilterOptionButton
            android:id="@+id/qm_filter_group_accepted_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            app:pressedButtonColor="@color/qm_status_color_accepted"
            app:defaultColor="@color/qm_status_color_default_color"
            app:srcCompat="@drawable/ic_qm_header_thumb_up_black_24dp"/>

        <bcn.alten.altenappmanagement.ui.customview.QMFilterOptionButton
            android:id="@+id/qm_filter_group_cancelled_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            app:pressedButtonColor="@color/qm_status_color_cancelled"
            app:defaultColor="@color/qm_status_color_default_color"
            app:srcCompat="@drawable/ic_qm_header_cancel_black_24dp"/>

        <bcn.alten.altenappmanagement.ui.customview.QMFilterOptionButton
            android:id="@+id/qm_filter_group_all_items_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            app:pressedButtonColor="@color/background_electric_blue"
            app:defaultColor="@color/qm_status_color_default_color"
            app:srcCompat="@drawable/ic_info_outline_black_24dp"/>
    </bcn.alten.altenappmanagement.ui.customview.QMFilterGroup>



</LinearLayout>