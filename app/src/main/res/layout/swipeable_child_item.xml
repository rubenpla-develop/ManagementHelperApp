<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/followup_swipe_view_background">

        <ImageView
            android:id="@+id/followup_item_child_swipeable_background_ico"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="32dp"
            app:srcCompat="@drawable/ic_done_all_black_24dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingEnd="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/consulter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/followup_item_vertical_margin"
            android:maxLength="30"
            android:text="Ruben Pla Ferrero"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/last_date_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/followup_item_vertical_margin"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/last_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/last_date_value"
                android:layout_toStartOf="@id/last_date_value"
                android:text="Ultimo :" />

            <TextView
                android:id="@+id/last_date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="11/10/2017" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/next_date_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/last_date_container"
            android:layout_marginStart="8dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/next_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/last_date_title"
                android:layout_toLeftOf="@id/next_date_value"
                android:layout_toStartOf="@id/next_date_value"
                android:text="PrÃ³x. :" />

            <TextView
                android:id="@+id/next_date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="11/10/2017" />
        </LinearLayout>

        <TextView
            android:id="@+id/client_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/consulter_name"
            android:layout_marginBottom="@dimen/followup_item_vertical_margin"
            android:maxLength="20"
            android:text="Banco Sabadell" />


        <TextView
            android:id="@+id/status_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/client_name"
            android:layout_marginRight="@dimen/followup_item_vertical_margin"
            android:text="Estado: " />

        <TextView
            android:id="@+id/status_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/client_name"
            android:layout_toEndOf="@id/status_title"
            android:layout_toRightOf="@id/status_title"
            android:text="Planificada"
            android:textColor="@color/followup_status_color_scheduled" />

    </RelativeLayout>
</FrameLayout>