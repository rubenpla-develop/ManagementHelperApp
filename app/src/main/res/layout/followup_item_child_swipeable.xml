<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/background_soft_orange">

    <TextView
        android:id="@+id/followup_item_child_swipeable_background_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Up to Date"
        android:textColor="@color/child_item_swipeable_background"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:id="@+id/followup_item_child_swipeable_background_ico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_access_time_swipeable_24dp"
        android:layout_centerVertical="true"
        android:layout_above="@id/followup_item_child_swipeable_background_text"
        android:layout_marginRight="32dp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>