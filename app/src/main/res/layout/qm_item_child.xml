<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/followup_item_child_vertical_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/followup_item_child_vertical_margin">
        <TextView
            android:id="@+id/qm_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="@dimen/qm_child_item_consultor_name"
            android:textStyle="bold"
            android:textAlignment="viewStart"
            android:text="Banco Sabadell"/>

        <TextView
            android:id="@+id/qm_consultor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textAlignment="viewEnd"
            android:textSize="@dimen/qm_child_item_consultor_name"
            android:text="Angel CampiÃ±a"/>
    </LinearLayout>

    <TextView
        android:id="@+id/qm_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/qm_child_item_consultor_name"
        android:textColor="@color/colorAccent"
        android:text="@string/follow_up_dialog_radio_group_scheduled_value" />

</LinearLayout>