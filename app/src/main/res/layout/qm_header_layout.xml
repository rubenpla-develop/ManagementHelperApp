<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/qm_header_component"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.QMFragment">

    <LinearLayout
        android:id="@+id/qm_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/qm_header_arrow_up"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_qm_header_arrow_upward_black_24dp"/>

        <ImageButton
            android:id="@+id/qm_header_arrow_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_qm_header_arrow_downward_black_24dp"/>

        <ImageButton
            android:id="@+id/qm_header_scheduled_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="#F3CD70"
            app:srcCompat="@drawable/ic_qm_header_schedule_black_24dp"/>

        <ImageButton
            android:id="@+id/qm_header_done_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="#58ACFA"
            app:srcCompat="@drawable/ic_qm_header_done_all_black_24dp"/>

        <ImageButton
            android:id="@+id/qm_header_accepted_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:background="#3ADF00"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_qm_header_thumb_up_black_24dp"/>

        <ImageButton
            android:id="@+id/qm_header_cancelled_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            android:background="#F00"
            app:srcCompat="@drawable/ic_qm_header_cancel_black_24dp"/>
    </LinearLayout>
</LinearLayout>