<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.QMFragment">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_qm_header_arrow_upward_black_24dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_qm_header_arrow_downward_black_24dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_qm_header_schedule_black_24dp"/>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_qm_header_done_all_black_24dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_qm_header_thumb_up_black_24dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_qm_header_cancel_black_24dp"/>
    </LinearLayout>

    <View
        android:id="@+id/parent_item_divider"
        style="@style/Divider"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"/>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/qm_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <io.github.kobakei.materialfabspeeddial.FabSpeedDial
            android:id="@+id/qm_fab_speed_dial"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|end"
            app:fab_fabDrawableTint="@color/colorBackground"
            app:srcCompat="@drawable/ic_dashboard_black_24dp"
            app:fab_menu="@menu/qm_speed_dial_menu"
            app:fab_useRevealEffect="true"
            app:fab_useRippleOnPreLollipop="true"
            app:fab_miniFabBackgroundColor="@color/background_soft_dark_blue"
            app:fab_miniFabTextBackground="@color/colorTextPrimary"
            app:fab_miniFabDrawableTint="@color/colorBackground"
            app:fab_fabBackgroundColor="@color/background_soft_orange"
            app:fab_extraMargin="-8dp"
            app:fab_useTouchGuard="true"
            app:fab_touchGuardColor="#90000000"/>
    </FrameLayout>


</LinearLayout>