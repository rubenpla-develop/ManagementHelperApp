<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="10dp"/>
            <solid
                android:color="@android:color/white"/>
            <padding
                android:left="8dp"
                android:top="6dp"
                android:right="8dp"
                android:bottom="6dp" />
        </shape>
    </item>
    <item
        android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="10dp"/>
            <solid
                android:color="@android:color/darker_gray"/>
            <padding
                android:left="8dp"
                android:top="6dp"
                android:right="8dp"
                android:bottom="6dp" />
        </shape>
    </item>
</selector>